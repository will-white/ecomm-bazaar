{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    // Let ESLint handle unused locals/parameters (It does a better job)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "incremental": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@org/components": ["components/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
